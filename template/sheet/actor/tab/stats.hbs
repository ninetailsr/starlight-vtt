<div class="flex wrap stats">
    <div class="characteristics border">
        <h1>{{localize "TITLE.CHARACTERISTICS"}}</h1>
        <div class="left">
            {{#each system.characteristics as |characteristic key|}}
                {{#if characteristic.isLeft}}
                    {{> systems/dark-heresy/template/sheet/characteristics/left.hbs characteristic=characteristic key=key}}
                {{/if}}
            {{/each}}
        </div>
        <div class="right">
            {{#each system.characteristics as |characteristic key|}}
                {{#if characteristic.isRight}}
                    {{> systems/dark-heresy/template/sheet/characteristics/right.hbs characteristic=characteristic key=key}}
                {{/if}}
            {{/each}}
        </div>
    </div>
    <div class="skills border">
        <h1>{{localize "TITLE.SKILLS"}}</h1>
        <div class="flex column" style="max-height: 330px; flex-basis: 100%; overflow-y: auto">
            <div class="two-columns">
                {{#each system.skillsFiltered as |skill key|}}
                    <div class="skill">
                        <div class="name">
                            <button class="roll-skill" data-skill="{{key}}" type="button">{{localize skill.label}}</button>
                        </div>
                        <input class="total" type="number" value="{{skill.total}}" data-dtype="Number" disabled />
                        <div class="information">
                            <input type="text" value="{{skill.advanceSkill}}" disabled />
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>
